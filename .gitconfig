	email = r.schuerer@braincode.de
[color]
	ui = auto

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	di = diff
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	ign = ls-files -o -i --exclude-standard

[credential]
	helper = cache --timeout=3600

[push]
	default = simple
